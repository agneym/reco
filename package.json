{
  "name": "reco",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "cross-env": "^7.0.2",
    "ffmpeg.js": "^4.2.9003",
    "htm": "^3.0.4",
    "preact": "^10.4.1",
    "tailwindcss": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/preact": "^1.0.2",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "servor": "^3.2.0",
    "snowpack": "^1.7.1"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development npm-run-all css --parallel dev:*",
    "build": "cross-env NODE_ENV=production npm-run-all --parallel css build:*",
    "css": "tailwindcss build src/styles.css -o lib/styles.css",
    "dev:js": "babel src/ --out-dir lib --watch",
    "dev:server": "servor --reload",
    "build:snowpack": "snowpack --optimize --clean",
    "build:js": "babel src/ --out-dir lib",
    "test": "jest",
    "prepare": "snowpack"
  },
  "keywords": [],
