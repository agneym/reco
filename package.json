  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "snowpack": {
    "webDependencies": [
      "htm",
      "preact",
      "preact/hooks",
      "htm/preact"
    ]
  }
